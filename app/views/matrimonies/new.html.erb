<div class="album text-muted">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h1>NEW matrimony</h1>
        <%= form_for(@matrimonies) do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :age %>
            <%= form.text_area :age, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :spa %>
            <%= form.text_area :spa, class: 'form-control' %>
          </div>

          <div class="field">
            <%= form.file_field :main_image %>
          </div>
          
          <div class="field">
            <%= form.file_field :thumb_image %>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
      </div>
    </div>  
  </div>
</div>