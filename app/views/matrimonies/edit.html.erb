<div class="album text-muted">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h1>Edit your profile</h1>
        <%= form_for(@matrimonies) do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :age %>
            <%= form.text_area :age, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :spa %>
            <%= form.text_area :spa, class: 'form-control' %>
          </div>
          
          <div class="field">
            <%= image_tag @matrimonies.main_image_url, size: '300x200' %>
            <%= form.file_field :main_image, class: 'btn btn-secondry' %>
          </div>
          
          <div class="field">
            <%= image_tag @matrimonies.thumb_image_url, size: '300x200' %>
            <%= form.file_field :thumb_image, class: 'btn btn-secondry' %>
          </div>


          <div class="auth-link">
            <%= form.submit 'update', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>  
  </div>
</div>
